{
  "name": "@borestad/typescript-boilerplate",
  "version": "0.0.1",
  "description": "A mean, clean & powerful boilerplate machine using typescript.",
  "engines": {
    "node": ">=6.5 <6.6",
    "vscode": "1.6"
  },
  "scripts": {
    "start": "npm run test:watch",
    "build": "tsc",
    "pretest": "rm -rf .code",
    "test": "tsc && nyc ava",
    "test:watch": "DEBUG=ava:watcher ava --watch",
    "test:failfast": "tsc && ava --fail-fast",
    "test:ci": "snyk test && CI=1 npm test"
  },
  "nyc": {
    "include": [
      ".code/**/*.{js,jsx}"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./.tmp"
  },
  "ava": {
    "files": [
      ".code/**/*.test.{js,jsx}",
      "!**/*.{ts,tsx}"
    ],
    "source": [
      ".code/**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "powerAssert": false,
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "debug": "2.4.5",
    "lodash": "4.17.2"
  },
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/debug": "0.0.29",
    "@types/lodash": "4.14.43",
    "@types/node": "6.0.52",
    "@types/power-assert": "1.4.29",
    "ava": "0.17.0",
    "chai": "3.5.0",
    "nyc": "10.0.0",
    "power-assert": "1.4.2",
    "snyk": "1.22.1",
    "ts-node": "1.7.2",
    "tslint": "4.1.1",
    "typescript": "2.1.4",
    "yarn": "0.18.1"
  }
}
